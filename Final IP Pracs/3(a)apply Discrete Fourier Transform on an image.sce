clc;
clear all;
a = zeros(30,30);
figure,subplot(2,2,1);
imshow(a);
title("Black Image");
a(5:24,13:17) = 1;
subplot(2,2,2);
imshow(a);
title("White Image");
F = fft2(a,256,256);
F2 = abs(F);
subplot(2,2,3);
imshow(F2);
title("DFT of Image");
F3 = fftshift(F);
F3 = abs(F3);
subplot(2,2,4);
imshow(F3);
title("Shifted Frequency Components");
F4 = log(1 + F3);
figure,subplot(2,2,1);
imshow(F4);
title("Fourier Spectrum");
